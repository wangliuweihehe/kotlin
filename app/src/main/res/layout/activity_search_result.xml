<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="com.hjm.admin.mykotlin.views.activitys.SearchResultActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="搜索结果"
        app:titleTextAppearance="@style/ToolbarTitle" />

    <TextView
        android:id="@+id/types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar"
        android:layout_marginTop="1dp"
        android:text="类型"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold" />
        <GridView
            android:id="@+id/gridview_type"
            android:layout_below="@id/types"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:numColumns="6"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/years"
        android:layout_below="@id/gridview_type"
        android:layout_marginTop="2dp"
        android:text="年代"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <GridView
        android:id="@+id/gridview_year"
        android:layout_below="@id/years"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:numColumns="6"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
