<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/touch_bg">

    <LinearLayout
        android:id="@+id/news_covers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic3_newscover1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/tabItemBg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pic3_newscover2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/tabItemBg" />

            <ImageView
                android:id="@+id/iv_pic3_newscover3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pic3_newstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_covers"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_pic3_newstitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pic3_newstitle"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_pic3_newstime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_pic3_newstitle2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tv_pic3_newstime"
        android:layout_marginTop="10dp" />
</RelativeLayout>