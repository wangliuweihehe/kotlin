<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/weeklyfocus_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_weeklyfocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_weeklyfocus"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="115px"
                android:layout_marginRight="115px"
                android:layout_marginTop="10px"
                android:clipChildren="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weeklyexpect_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_weeklyexpect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_weeklyexpect"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="115px"
                android:layout_marginRight="115px"
                android:layout_marginTop="10px"
                android:clipChildren="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/highestrating_container_ch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_highestrating_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_highestrating_ch"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="115px"
                android:layout_marginRight="115px"
                android:layout_marginTop="10px"
                android:clipChildren="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>